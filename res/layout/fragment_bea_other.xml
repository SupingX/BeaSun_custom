<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    	        android:background="@color/color_bg_main"
    tools:context="${relativePackage}.${activityClass}" >
	
    <RelativeLayout
        android:id="@+id/rl_user_info"
               android:clickable="true"
        android:layout_marginTop="40dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@drawable/selector_white_to_grey"
        android:layout_height="60dp"
        android:layout_width="match_parent"
        >
        <TextView 
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:drawableLeft="@drawable/ic_other_cell_img0"
            android:text="@string/fragment_other_userinfo"
            android:textColor="@android:color/primary_text_light"
            android:gravity="center"
            android:drawablePadding="20dp"
            android:textSize="16sp"
            
            />
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_action_next_item" />

    </RelativeLayout>
    <RelativeLayout
              android:id="@+id/rl_faq"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@drawable/selector_white_to_grey"
        android:layout_height="60dp"
        android:layout_width="match_parent"
        >
        <TextView 
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:drawableLeft="@drawable/ic_other_cell_img1"
            android:text="@string/fragment_other_faq"
            android:textColor="@android:color/primary_text_light"
            android:gravity="center"
            android:drawablePadding="20dp"
            android:textSize="16sp"
            
            />
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_action_next_item" />

    </RelativeLayout>
    <View android:layout_height="1px"
        android:layout_width="40dp"
        android:background="#fff"
      />
    <RelativeLayout
              android:id="@+id/rl_feedback"
               android:clickable="true"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@drawable/selector_white_to_grey"
        android:layout_height="60dp"
        android:layout_width="match_parent"
        >
        <TextView 
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:drawableLeft="@drawable/ic_other_cell_img2"
            android:text="@string/fragment_other_feedback"
            android:textColor="@android:color/primary_text_light"
            android:gravity="center"
            android:drawablePadding="20dp"
            android:textSize="16sp"
            
            />
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_action_next_item" />

    </RelativeLayout>

</LinearLayout>